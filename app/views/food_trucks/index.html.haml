%link{:href => "//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css", :rel => "stylesheet"}/
/ begin template
%header.navbar.navbar-bright.navbar-fixed-top{:role => "banner"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/food_trucks"} Home
    %nav.collapse.navbar-collapse{:role => "navigation"}
      %ul.nav.navbar-nav
        %li
          / =link_to "New Company", new_company_path
        %li
          / =link_to "Edit Company Info", edit_company_path(@company)
        %li
          / =link_to "Cancel", root_path
        %li
          - if user_signed_in? 
            = link_to('Logout', destroy_user_session_path, :method => :delete)
          - else
            = link_to('Login', new_user_session_path)
      %ul.nav.navbar-right.navbar-nav
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            %i.glyphicon.glyphicon-search
          %ul.dropdown-menu{:style => "padding:12px;"}
            %form.form-inline
              %button.btn.btn-default.pull-right{:type => "submit"}
                %i.glyphicon.glyphicon-search
              %input.form-control.pull-left{:placeholder => "Search", :type => "text"}

/   =image_tag foodtruck.image.url

#map-canvas
#main.container-fluid
  .row
    #left.col-xs-8
      - @food_truck.each do |foodtruck|
        .panel.panel-info
          .panel-heading
            = link_to foodtruck.name, company_food_truck_path(foodtruck.company, foodtruck)
            
            / ..._path(@food_truck.company, @food_truck)
            .pheadleft
              = "Now Serving Food!"   
          = image_tag foodtruck.image.url, style: "width: 150px; height: 150px"
          = foodtruck.description
        %hr
          
    .col-xs-4
      
      %div{:style => "width: 400px;"}
      #map{:style => "width: 400px; height: 700px;"}